<%- include("./includes/template-start.ejs") %>
	<div class="job_main">
		<div class="job_heading">
			<% if (pageTitle == 'Job Details') { %>
				<div><%= job.job_title %></div>
	        <% } else { %>
	            <div><%= program.program_title %></div>
	        <% } %>
			<% if (pageTitle == 'Job Details') { %>
				<div>At <%= job.company_name %></div>
	        <% } else { %>
	            <div>By <%= program.company_name %></div>
	        <% } %>
			<div>
				<% if (pageTitle == 'Job Details') { %>
					<input class="submit-button" type="submit" value="APPLY FOR THIS JOB">
		        <% } else { %>
		            <input class="submit-button" type="submit" value="REGISTER">
		        <% } %>
			</div>
		</div>
		<div class="job_content">
			<div class="job_div1">
				<div>
					<h3 class="blackcolor"> ABOUT THIS ROLE </h3>
					<br>
					<p>
						<% if (pageTitle == 'Job Details') { %>
							<%= job.job_desc %>
				        <% } else { %>
				        	<%= program.about %>
				        <% } %>
					</p>
					<br>
					<p>
						<% if (pageTitle == 'Job Details') { %>
							<%= job.eligibility %>
				        <% } else { %>
				        	<%= program.eligibility %>
				        <% } %>
				    </p>
					<br>
				</div>
				<% if (pageTitle == 'Job Details') { %>
					<div>
						<h3 class="blackcolor"> SKILLS </h3>
						<br>
						<% for(let skill of job.skills_needed) { %>
							<div class="skill"><%= skill %></div>
						<% } %>
					</div>		
				<% } %> 
			</div>
			<% if (pageTitle == 'Job Details') { %>
				<div class="job_div2">
					<% for(let perk of job.perks) { %>
						<div class="perks"><%= perk %></div>
					<% } %>
				</div>	
			<% } %> 
		</div>
	</div>

</body>
<html>